<aura:component implements="force:appHostable" access="GLOBAL" controller="InventoryManagementController">

    <aura:attribute name="batch" type="String" default="" access="global" description="description" />
    <aura:attribute name="product" type="String" access="global" default="" />
    <aura:attribute name="material" type="String" access="global" default="" />
    <aura:attribute name="consignment" type="String" access="global" default="" />

    <lightning:card iconName="custom:custom87" title="Add Transaction">
        <div class="slds-form-element__control slds-p-around_medium">
            <div>
                <lightning:layout>
                    <lightning:layoutItem size="2" padding="around-small">
                    </lightning:layoutItem>
                    
                    <lightning:layoutItem size="4" padding="around-small">
                        <lightning:input aura:id="batch" label="Batch" type="search" value="{!v.batch}" />
                    </lightning:layoutItem>
                    
                    <lightning:layoutItem size="4" padding="around-small">
                        <lightning:input aura:id="product" label="Product" type="search" value="{!v.product}" />
                    </lightning:layoutItem>
                    
                    <lightning:layoutItem size="2" padding="around-small">
                    </lightning:layoutItem>
                </lightning:layout>
                
                <lightning:layout>
                    <lightning:layoutItem size="2" padding="around-small">
                    </lightning:layoutItem>

                    <lightning:layoutItem size="4" padding="around-small">
                        <lightning:input aura:id="material" label="Material" type="search" value="{!v.material}" />
                    </lightning:layoutItem>
                    
                    <lightning:layoutItem size="4" padding="around-small">
                        <lightning:input aura:id="consignment" label="Consignment" type="search"
                            value="{!v.consignment}" />
                    </lightning:layoutItem>

                    <lightning:layoutItem size="2" padding="around-small">
                    </lightning:layoutItem>
                </lightning:layout>
            </div>
            <div class="slds-align_absolute-center">
                <lightning:button label="Save" onclick="{!c.handleCreateTransaction}" variant="brand"
                    class="slds-m-top_medium" />
                <lightning:button label="Cancel" onclick="{}" variant="neutral" class="slds-m-top_medium" />
            </div>
        </div>
    </lightning:card>

</aura:component>